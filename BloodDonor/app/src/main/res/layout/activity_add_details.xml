<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blood"
    tools:context="com.example.nipu.blooddonor.AddDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/center"
            android:text="Create an Account!!!!"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:text="Member Id :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="number"
            android:hint="1"
            android:id="@+id/editid"
            android:background="@android:drawable/alert_light_frame"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/name"
           android:text="Name :"
           android:textColor="#fff"
           android:textSize="20sp"
           android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:hint="Person name"
            android:id="@+id/editname"
            android:background="@android:drawable/alert_light_frame"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blood"
            android:text="Blood Group :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="text"
            android:hint="A+"
            android:id="@+id/editblood"
            android:background="@android:drawable/alert_light_frame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="Email :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textEmailAddress"
            android:hint="   a@b.com"
            android:id="@+id/editemail"
            android:background="@android:drawable/alert_light_frame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="Phone Number :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="phone"
            android:hint="017XXXXXXX"
            android:id="@+id/editphone"
            android:background="@android:drawable/alert_light_frame"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Last Date of  Donation:"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="date"
            android:hint="dd/mm/yyyy"
            android:id="@+id/editdate"
            android:background="@android:drawable/alert_light_frame"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:text="Address :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="text"
            android:hint="Area, Division"
            android:id="@+id/editaddress"
            android:background="@android:drawable/alert_light_frame"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/submit"
            android:layout_marginLeft="12dp"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="#000"/>

    </LinearLayout>

</ScrollView>
