<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/index3"
    tools:context="com.example.nipu.blooddonor.ShowDetails">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Donor's Detail : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="1" />

        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#000" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/textView1"
                android:text="MemberID                    : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtMemberID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MemeberId"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/textView2"
                android:text="Name                            : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/txtMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membername"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/textView3"
                android:text="Blood Group                 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/txtMemberBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloodgroup"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/textView4"
                android:text="Email                             : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/txtMemberEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/textView5"
                android:text="Phone Number            : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtMemberPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

        <TextView
            android:id="@+id/textView6"
            android:text="Last date of donation : "
            android:textSize="18sp"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_column="1" />

        <TextView
            android:id="@+id/txtMemberDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/textView7"
                android:text="Address                         : "
                android:textSize="18sp"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtMemberAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_column="2" />
        </TableRow>

        <View
            android:layout_marginTop="12dp"
            android:layout_height="1dip"
            android:background="#000" />




            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Number"
                android:id="@+id/editnum"
                android:layout_column="1" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Massege"
                android:id="@+id/editmsg"
                android:layout_column="0" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btnsend"
            android:text="Send SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />




    </TableLayout>


</ScrollView>
