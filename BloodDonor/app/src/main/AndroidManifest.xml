<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nipu.blooddonor" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blood"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SearchOption"
            android:label="@string/title_activity_search_option" >
        </activity>
        <activity
            android:name=".AddDetails"
            android:label="@string/title_activity_add_details" >
        </activity>
        <activity
            android:name=".DonorList"
            android:label="@string/title_activity_donor_list" >
        </activity>
        <activity
            android:name=".ShowDetails"
            android:label="@string/title_activity_show_details" >
        </activity>
        <activity
            android:name=".UpdateActivity"
            android:label="@string/title_activity_update" >
        </activity>
        <activity
            android:name=".KnowledgeDonate"
            android:label="@string/title_activity_knowledge_donate" >
        </activity>
    </application>

</manifest>
